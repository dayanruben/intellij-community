    name = "kotlin-builder-wasmjs",
    main_class = "org.jetbrains.bazel.kotlin.builder.wasmjs.WasmJsBuildWorker",
    visibility = ["//visibility:public"],
    runtime_deps = [":kotlin-builder-wasmjs-lib"],
