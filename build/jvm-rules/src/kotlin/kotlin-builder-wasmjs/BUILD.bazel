kt_jvm_library(
    name = "kotlin-builder-wasmjs-lib",
    srcs = [
        "WasmJsBuildWorker.kt",
    ],
    kotlinc_opts = "//:rules_jvm_bootstrap_kotlinc_options",
    visibility = ["//visibility:public"],
    runtime_deps = [
