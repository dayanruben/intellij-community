<idea-plugin>
  <dependencies>
    <module name="intellij.platform.frontend.split"/>
    <module name="intellij.xml.frontback.impl"/>
    <module name="intellij.xml.parser"/>
    <module name="intellij.xml.ui.common"/>
  </dependencies>

  <extensions defaultExtensionNs="com.intellij">
    <highlightErrorFilter implementation="com.intellij.xml.frontend.split.editor.FrontendHtmlHighlightErrorFilter"/>

    <virtualFileCustomDataConsumer implementation="com.intellij.xml.HtmlCodeStyleSettingsCustomDataSynchronizer"/>
    <virtualFileCustomDataConsumer implementation="com.intellij.xml.XmlCodeStyleSettingsCustomDataSynchronizer"/>

    <applicationService serviceInterface="com.intellij.javaee.ExternalResourceManager"
                        serviceImplementation="com.intellij.javaee.ExternalResourceManagerExBase"/>

    <applicationService serviceInterface="com.intellij.psi.impl.source.resolve.XmlResolveReferenceSupport"
                        serviceImplementation="com.intellij.xml.frontend.split.editor.DummyXmlResolveReferenceSupport"/>
  </extensions>
</idea-plugin>